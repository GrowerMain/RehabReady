<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/timerbg"
    tools:context=".timer">

    <!-- Container for Chronometers -->
    <LinearLayout
        android:id="@+id/chronometerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <!-- Add Start and Reset buttons here for chronometer1 -->

    </LinearLayout>

    <!-- Second Row -->

    <EditText
        android:id="@+id/titleEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:hint="What are you ready to prevail over?"
        android:inputType="text"
        android:minHeight="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/chronometer_box_background">

        <Chronometer
            android:id="@+id/chronometer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:format="%d:%s"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/startButton1"
            android:backgroundTint="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_gravity="center"/>

        <!-- Reset button -->
        <Button
            android:id="@+id/resetButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Reset"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Add Start and Reset buttons here for chronometer2 -->


    </LinearLayout>

    <EditText
        android:id="@+id/titleEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:hint="Which addiction are you willing to fight?"
        android:inputType="text"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chronometer_box_background"
        android:layout_gravity="center">

        <Chronometer
            android:id="@+id/chronometer2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:format="%d:%s"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/startButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="Start"
            android:layout_gravity="center"/>

        <!-- Reset button -->
        <Button
            android:id="@+id/resetButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Reset"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/titleEditText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:hint="What are you looking to abstain from?"
        android:inputType="text"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chronometer_box_background"
        android:layout_gravity="center">

        <Chronometer
            android:id="@+id/chronometer3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:format="%d:%s"
            android:layout_gravity="center_horizontal"/>

        <!-- Reset button -->
        <Button
            android:id="@+id/startButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:layout_gravity="center"
            android:text="Start" />

        <Button
            android:id="@+id/resetButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Reset" />


    </LinearLayout>


</LinearLayout>